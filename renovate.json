{
  "extends": [
    "config:recommended"
  ],
  "kubernetes": {
    "managerFilePatterns": [
      "/\\.yaml$/"
    ]
  },
  "packageRules": [
    {
      "matchPackageNames": ["renovate/renovate"],
      "automerge": true,
      "ignoreTests": true
    },
    {
      "matchDatasources": ["docker"],
      "matchHost": "docker.io",
      "registryUrls": ["https://registry.docker.sunflower.lgbt"]
    }
  ]
}
